{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "DOM",
      "ES6"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "outDir": "build",
    "removeComments": true,
    "rootDir": "src",
    "sourceMap": false,
    "target": "ES5"
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}
